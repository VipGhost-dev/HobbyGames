<Page x:Class="HobbyGames.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HobbyGames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <StackPanel Margin="10,99,566,21">
            <Button x:Name="ViewUsersBTN" Content="Посмотреть пользователей" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="39" Width="181" Click="ViewUsersBTN_Click"/>
            <Button x:Name="ViewOrdersBTN" Content="Посмотреть продажи" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="39" Width="181" Click="ViewOrdersBTN_Click"/>
            <Button x:Name="BackAdminBtn" Content="Назад" HorizontalAlignment="Left" Margin="20,20,0,0" Width="181" Click="BackAdminBtn_Click" Height="39" VerticalAlignment="Top"/>
        </StackPanel>
        <Label x:Name="AdminMenuText" Content="Меню администратора" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" FontFamily="Impact" Margin="0,32,0,0"/>


    </Grid>
</Page>
